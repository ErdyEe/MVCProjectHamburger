@model List<Menu>

<form method="post" action="/User/Order/AddToOrder/">
    @foreach (Menu menu in Model)
    {
        <div class="col-sm-4" style="margin-top: 20px">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="/HamburgerCoverImages/@menu.CoverImage" alt="Card image cap" style="height: 200px; width: 200px; display: block; margin-left: auto; margin-right: auto;margin-top:10px">
                <div class="card-body">
                    <h5 class="card-title">@menu.Name</h5>
                    <p class="card-text">@menu.Price TL</p>

                    <input type="hidden" name="menuID" value="@menu.ID">

                    <label for="myNumber">Number:</label>
                    <input type="number" id="myNumber" name="number" min="1" max="100" step="1" value="1">

                    <div class="form-group">
                        <label for="menuSize">Menu Size:</label>
                        <select class="form-control menusize" name="menuSize" id="menuSize">
                            <option value="0">Small</option>
                            <option value="10">Medium</option>
                            <option value="20">Large</option>
                        </select>
                    </div>
                    <br />

                    <button type="submit" class="btn btn-primary">Sepete Ekle</button>
                </div>
            </div>
        </div>
    }
</form>
