@model List<Menu>

<div class="row">
    @foreach (Menu menu in Model)
    {
        <div class="col-sm-4" style="margin-top: 20px">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="/HamburgerCoverImages/@menu.CoverImage" alt="Card image cap" style="height: 200px; width: 200px; display: block; margin-left: auto; margin-right: auto;">
                <div class="card-body">
                    <h5 class="card-title"> @menu.Name </h5>
                    <p class="card-text"> @menu.Price TL </p>
                    <a class="btn btn-primary" asp-route-id="@menu.ID"> Sepete Ekle </a>
                </div>
            </div>
        </div>
    }
</div>

